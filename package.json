{
  "name": "potlucky-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "validate:packages": "node ./infra/scripts/validate-packages.mjs",
    "ci": "pnpm -w lint && pnpm -w typecheck && pnpm -w test && pnpm -w build && pnpm validate:packages",
    "format": "prettier --write .",
    "drizzle:generate": "drizzle-kit generate --config ./infra/db/drizzle.config.ts",
    "drizzle:push": "drizzle-kit push --config ./infra/db/drizzle.config.ts",
    "db:seed": "tsx ./infra/db/seed.ts",
    "db:rls": "tsx ./infra/db/apply-rls.ts",
    "test:rls": "vitest run infra/db/tests/rls.e2e.test.ts",
    "vercel:setup": "./scripts/setup-vercel.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@sentry/cli": "^2.52.0",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.8.0",
    "pg": "^8.16.3",
    "prettier": "^3.3.3",
    "tsup": "^8.0.0",
    "tsx": "^4.16.0",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.7.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.56.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "zod": "^4.1.4"
  }
}
